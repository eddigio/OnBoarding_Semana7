<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnBoarding.MainPage">

    <StackLayout>
        <Label Text="ONBOARDING" TextColor="Yellow"
               ></Label>

        <Entry x:Name="txtuser"
               Placeholder="Ingrese el usuario"></Entry>
        <Entry x:Name="txtpass"
               Placeholder="Ingrese la contraseña" IsPassword="True"
               ></Entry>
        <Button x:Name="btnAbrir_ventana_dos"
                Text="Abrir Ventana Dos Ingresar"
                Clicked="btnAbrir_ventana_dos_Clicked"></Button>
    </StackLayout>

</ContentPage>
